@page
@model ConfirmEmailChangeModel
@{
    ViewData["Title"] = "Xác nhận thay đổi email";
}

<div class="manage-container">
    <div class="manage-card">
        <div class="manage-header">
            <h2 class="manage-title">@ViewData["Title"]</h2>
        </div>
        <div class="manage-body">
            @if (Model.IsConfirmed)
            {
                <div class="text-center">
                    <div class="mb-4">
                        <i class="fas fa-check-circle text-success" style="font-size: 5rem;"></i>
                    </div>
                    <h3 class="mb-3">Email đã được xác nhận thành công!</h3>
                    <p class="mb-4">Địa chỉ email của bạn đã được cập nhật.</p>
                    <a asp-area="Identity" asp-page="/Account/Manage/Index" class="btn btn-primary">
                        <i class="fas fa-user me-2"></i>Quay lại trang cá nhân
                    </a>
                </div>
            }
            else
            {
                <div class="text-center">
                    <div class="mb-4">
                        <i class="fas fa-times-circle text-danger" style="font-size: 5rem;"></i>
                    </div>
                    <h3 class="mb-3">Xác nhận thất bại</h3>
                    <p class="mb-4">@Model.StatusMessage</p>
                    <a asp-area="Identity" asp-page="/Account/Manage/Email" class="btn btn-primary">
                        <i class="fas fa-envelope me-2"></i>Quay lại quản lý email
                    </a>
                </div>
            }
        </div>
    </div>
</div> 