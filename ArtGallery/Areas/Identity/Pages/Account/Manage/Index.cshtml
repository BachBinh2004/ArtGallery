@page
@model IndexModel
@{
    ViewData["Title"] = "Thông tin cá nhân";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-3">
        <partial name="_ManageNav" />
    </div>
    <div class="col-md-9">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Input.TenNguoiDung" class="form-label"></label>
                <input asp-for="Input.TenNguoiDung" class="form-control" />
                <span asp-validation-for="Input.TenNguoiDung" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Input.AnhDaiDien" class="form-label"></label>
                <div class="d-flex align-items-center mb-2">
                    <img src="@Model.CurrentAvatar" style="width:100px; height:100px; object-fit:cover" class="rounded-circle me-3" />
                </div>
                <input type="file" asp-for="Input.AnhDaiDien" class="form-control" accept="image/*" />
                <span asp-validation-for="Input.AnhDaiDien" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Input.DiaChi" class="form-label"></label>
                <textarea asp-for="Input.DiaChi" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Input.DiaChi" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Cập nhật</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}