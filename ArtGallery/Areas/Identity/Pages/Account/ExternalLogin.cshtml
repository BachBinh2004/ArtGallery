@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Đăng ký";
}

<link rel="stylesheet" href="~/css/external-login.css">

<div class="external-login-container">
    <h1>@ViewData["Title"]</h1>
    <h2 id="external-login-title">Liên kết tài khoản @Model.ProviderDisplayName của bạn</h2>
    <hr />

    <p id="external-login-description" class="text-info">
        Bạn đã xác thực thành công với <strong>@Model.ProviderDisplayName</strong>.
        Vui lòng nhập địa chỉ email để hoàn tất quá trình đăng nhập.
    </p>

    <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="form-floating mb-3">
            <input asp-for="Input.Email" class="form-control" autocomplete="email" placeholder=" "/>
            <label asp-for="Input.Email" class="form-label">Email</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Đăng ký</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
