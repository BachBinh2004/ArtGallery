@model ArtistRegistrationViewModel

@{
    ViewData["Title"] = "Đăng ký trở thành nghệ sĩ";
}

<link rel="stylesheet" href="~/css/register-artist.css?v=3">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Đăng ký trở thành nghệ sĩ</h3>
                </div>
                <div class="card-body">
                    <!-- Phần lợi ích khi trở thành nghệ sĩ -->
                    <div class="artist-benefits mb-5">
                        <h4 class="benefits-title">Lợi ích khi trở thành nghệ sĩ trên ArtGallery</h4>
                        <ul class="benefits-list">
                            <li>Đăng tải và kinh doanh các tác phẩm nghệ thuật một cách dễ dàng</li>
                            <li>Tiếp cận hàng nghìn khách hàng yêu thích tranh trên toàn quốc</li>
                            <li>Tự do thiết lập giá bán và số lượng sản phẩm</li>
                            <li>Hệ thống thanh toán an toàn, minh bạch</li>
                            <li>Hỗ trợ vận chuyển và xử lý đơn hàng nhanh chóng</li>
                            <li>Quảng bá tác phẩm trên các kênh truyền thông của ArtGallery</li>
                            <li>Theo dõi doanh thu, lượt xem và hiệu suất bán hàng theo thời gian thực</li>
                        </ul>
                    </div>

                    <form asp-action="RegisterArtist" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="form-group">
                            <label asp-for="TenNgheSi" class="control-label d-flex align-items-center">
                                Tên nghệ sĩ <i class="fas fa-asterisk text-danger ms-2" style="font-size: 8px;"></i>
                            </label>
                            <input asp-for="TenNgheSi" class="form-control" placeholder="Nhập tên nghệ sĩ của bạn" required />
                            <span asp-validation-for="TenNgheSi" class="text-danger"></span>
                            <small class="form-text">Tên này sẽ được hiển thị công khai trong hồ sơ của bạn</small>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="DiaChi" class="control-label d-flex align-items-center">
                                Địa chỉ <i class="fas fa-asterisk text-danger ms-2" style="font-size: 8px;"></i>
                            </label>
                            <input asp-for="DiaChi" class="form-control" placeholder="Nhập địa chỉ của bạn" required />
                            <span asp-validation-for="DiaChi" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="MoTa" class="control-label d-flex align-items-center">
                                Mô tả về bản thân <i class="fas fa-asterisk text-danger ms-2" style="font-size: 8px;"></i>
                            </label>
                            <textarea asp-for="MoTa" class="form-control" rows="5" placeholder="Giới thiệu về bản thân và nghệ thuật của bạn..." required></textarea>
                            <span asp-validation-for="MoTa" class="text-danger"></span>
                            <small class="form-text">Mô tả sẽ giúp người xem hiểu rõ hơn về phong cách và quan điểm nghệ thuật của bạn</small>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="SoDienThoai" class="control-label d-flex align-items-center">
                                Số điện thoại liên hệ <i class="fas fa-asterisk text-danger ms-2" style="font-size: 8px;"></i>
                            </label>
                            <input asp-for="SoDienThoai" class="form-control" placeholder="Nhập số điện thoại" required />
                            <span asp-validation-for="SoDienThoai" class="text-danger"></span>
                            <small class="form-text">Số điện thoại sẽ được sử dụng để xác minh danh tính và liên hệ khi cần</small>
                        </div>
                        
                        <div class="form-group mb-4">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="agreeTerms" required />
                                <label class="form-check-label" for="agreeTerms">
                                    Tôi đồng ý với các <a href="#">điều khoản dịch vụ</a> về việc đăng tải và bán tác phẩm nghệ thuật
                                </label>
                            </div>
                        </div>
                        
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-paint-brush me-2"></i>Đăng ký
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 