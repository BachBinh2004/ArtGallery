@model ArtistRegistrationViewModel

@{
    ViewData["Title"] = "Đăng ký trở thành nghệ sĩ";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-white">
                    <h3 class="card-title mb-0">Đăng ký trở thành nghệ sĩ</h3>
                </div>
                <div class="card-body">
                    <form asp-action="RegisterArtist" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="TenNgheSi" class="control-label">Tên nghệ sĩ</label>
                            <input asp-for="TenNgheSi" class="form-control" placeholder="Nhập tên nghệ sĩ của bạn" />
                            <span asp-validation-for="TenNgheSi" class="text-danger"></span>
                            <small class="form-text text-muted">Tên này sẽ được hiển thị công khai trong hồ sơ của bạn</small>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="DiaChi" class="control-label">Địa chỉ</label>
                            <input asp-for="DiaChi" class="form-control" placeholder="Nhập địa chỉ của bạn" />
                            <span asp-validation-for="DiaChi" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="MoTa" class="control-label">Mô tả về bản thân</label>
                            <textarea asp-for="MoTa" class="form-control" rows="5" placeholder="Giới thiệu về bản thân và nghệ thuật của bạn..."></textarea>
                            <span asp-validation-for="MoTa" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="SoDienThoai" class="control-label">Số điện thoại liên hệ</label>
                            <input asp-for="SoDienThoai" class="form-control" placeholder="Nhập số điện thoại" />
                            <span asp-validation-for="SoDienThoai" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="agreeTerms" required />
                                <label class="form-check-label" for="agreeTerms">
                                    Tôi đồng ý với các <a href="#">điều khoản dịch vụ</a> về việc đăng tải và bán tác phẩm nghệ thuật
                                </label>
                            </div>
                        </div>
                        
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary px-5">Đăng ký</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 