@model ArtGallery.ViewModels.ArtistApprovalProcessedViewModel
@{
    ViewData["Title"] = "Đơn đăng ký đã được xử lý";
}

<link rel="stylesheet" href="~/css/artist-approval.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4>Đơn đăng ký đã được xử lý</h4>
                    <a href="@Url.Action("Index", "Admin")" class="btn btn-back">
                        <i class="fas fa-arrow-left me-2"></i>Quay lại
                    </a>
                </div>
                <div class="card-body text-center py-5">
                    <div class="artist-avatar mb-4">
                        <img src="@Model.AvatarPath" alt="@Model.ArtistName">
                    </div>
                    <h3 class="artist-name">@Model.ArtistName</h3>

                    @if (Model.IsApproved)
                    {
                        <div class="approval-status-card approved">
                            <div class="status-icon">
                                <i class="fas fa-check-circle"></i>
                            </div>
                            <h4>Đã chấp thuận đăng ký nghệ sĩ</h4>
                            <p>Người dùng này đã được chấp thuận trở thành nghệ sĩ trên hệ thống.</p>
                        </div>
                    }
                    else
                    {
                        <div class="approval-status-card rejected">
                            <div class="status-icon">
                                <i class="fas fa-times-circle"></i>
                            </div>
                            <h4>Đã từ chối đăng ký nghệ sĩ</h4>
                            <p>Đơn đăng ký nghệ sĩ của người dùng này đã bị từ chối.</p>
                        </div>
                    }

                    <div class="mt-5">
                        <a href="@Url.Action("Profile", "User", new { id = Model.UserId })" class="btn-view-profile">
                            <i class="fas fa-user me-2"></i> Xem trang cá nhân
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 