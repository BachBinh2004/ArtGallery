@model ArtGallery.ViewModels.ArtistApprovalProcessedViewModel
@{
    ViewData["Title"] = "Đơn đăng ký đã được xử lý";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Đơn đăng ký đã được xử lý</h4>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-light">Quay lại</a>
                </div>
                <div class="card-body text-center py-5">
                    <div class="mb-4">
                        <img src="@Model.AvatarPath" alt="@Model.ArtistName" class="rounded-circle mb-3" style="width: 100px; height: 100px; object-fit: cover;">
                        <h5>@Model.ArtistName</h5>
                    </div>

                    @if (Model.IsApproved)
                    {
                        <div class="alert alert-success" role="alert">
                            <i class="fas fa-check-circle fa-3x mb-3"></i>
                            <h4>Đã chấp thuận đăng ký nghệ sĩ</h4>
                            <p class="mb-0">Người dùng này đã được chấp thuận trở thành nghệ sĩ trên hệ thống.</p>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="fas fa-times-circle fa-3x mb-3"></i>
                            <h4>Đã từ chối đăng ký nghệ sĩ</h4>
                            <p class="mb-0">Đơn đăng ký nghệ sĩ của người dùng này đã bị từ chối.</p>
                        </div>
                    }

                    <div class="mt-4">
                        <a href="@Url.Action("Profile", "User", new { id = Model.UserId })" class="btn btn-primary">
                            <i class="fas fa-user me-2"></i> Xem trang cá nhân
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 