@model ArtGallery.Models.Account.RegisterViewModel

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng ký - PiaoYue Art Gallery</title>
    <link rel="stylesheet" href="~/css/login1_register.css">
    <script src="~/js/login_register.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <div class="slideshow-container">
        <div class="slide active" style="background-image: url('/images/backgrounds/Ambassador.jpg')"></div>
        <div class="slide" style="background-image: url('/images/backgrounds/amano2.jpg')"></div>
    </div>

    <div class="register-container">
        <div class="register-box">
            <!-- Logo -->
            <div class="register-header">
                <span class="logo-text">Piao<span class="logo-highlight">Yue</span></span>
                <p class="register-text">Tạo tài khoản </p>
            </div>
            <form asp-action="Register" asp-controller="Account" method="post">
                <!-- Tên đăng nhập -->
                <div class="form-group">
                    <input asp-for="TenDangNhap" class="form-input" placeholder="Tên đăng nhập">
                    <span asp-validation-for="TenDangNhap" class="validation-message"></span>
                </div>

                <!-- Email -->
                <div class="form-group">
                    <input asp-for="Email" class="form-input" placeholder="Địa chỉ email">
                    <span asp-validation-for="Email" class="validation-message"></span>
                </div>

                <!-- Mật khẩu -->
                <div class="form-group">
                    <div style="position: relative; width: 100%;">
                        <input asp-for="MatKhau" type="password" class="form-input" placeholder="Mật khẩu">
                        <button type="button" class="toggle-password" onclick="togglePassword(this)">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                    <span asp-validation-for="MatKhau" class="validation-message"></span>
                </div>

                <!-- Điều khoản --> 
                <div class="terms-group">
                    <label class="terms-label">
                        <input asp-for="DongYDieuKhoan" type="checkbox">
                        <span>Tôi đồng ý với điều khoản & điều kiện</span>
                    </label>
                    <span asp-validation-for="DongYDieuKhoan" class="validation-message"></span>
                </div>

                <!-- Xác nhận -->
                <button type="submit" class="next-button">Tiếp theo</button>
            </form>

            <!-- Footer -->
            <div class="register-footer">
                <p>
                    Trang web này được bảo vệ bởi reCAPTCHA Enterprise và Google
                    <a href="#">Chính sách bảo mật</a> và <a href="#">Điều khoản dịch vụ</a> được áp dụng.
                </p>
            </div>
            <div class="login-link">
                Bạn đã có tài khoản? <a href="@Url.Action("Login1", "Account")">Đăng nhập</a>
            </div>
        </div>
    </div>
</body>
</html>