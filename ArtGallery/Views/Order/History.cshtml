                                                    <a asp-controller="Order" asp-action="Display" asp-route-id="@item.MaTranh" asp-route-orderId="@item.MaGiaoDich" class="btn btn-primary btn-sm">
                                                        <i class="fas fa-check-circle me-1"></i>Xác nhận
