@{
    ViewData["Title"] = "Đặt hàng thành công";
}

<link rel="stylesheet" href="~/css/style.css">


<div class="container mt-5 pt-5">
    <div class="card shadow-sm">
        <div class="card-body text-center py-5">
            <div class="text-success mb-4">
                <i class="fas fa-check-circle fa-5x"></i>
            </div>
            <h2 class="mb-4">Đặt hàng thành công!</h2>
            <p class="lead mb-4">Cảm ơn bạn đã đặt hàng. Chúng tôi sẽ liên hệ với bạn để xác nhận đơn hàng.</p>
            <div class="d-flex justify-content-center gap-3">
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">
                    <i class="fas fa-home me-2"></i>Về trang chủ
                </a>
                <a asp-controller="Order" asp-action="History" class="btn btn-primary">
                    <i class="fas fa-history me-2"></i>Xem lịch sử đặt hàng
                </a>
            </div>
        </div>
    </div>
</div> 