@model ArtGallery.Models.VNPAY.PaymentResponseModel

@if (Model == null)
{
    <div class="alert alert-danger mt-4">
        <h2>Không tìm thấy thông tin thanh toán.</h2>
        <a href="/" class="btn btn-secondary mt-3">Về trang chủ</a>
    </div>
}
else
{
    <link rel="stylesheet" href="~/css/style.css">
    <div class="container mt-4">
        <div class="alert @(Model.VnPayResponseCode == "00" ? "alert-success" : "alert-danger")">
            <h2>@(Model.VnPayResponseCode == "00" ? "Thanh toán thành công!" : "Thanh toán thất bại!")</h2>
        </div>

        <p><strong>Mã đơn hàng:</strong> @Model.OrderId</p>
        <p><strong>Mã giao dịch VNPAY:</strong> @Model.TransactionId</p>
        <p><strong>Phương thức thanh toán:</strong> @Model.PaymentMethod</p>
        <p><strong>Mô tả đơn hàng:</strong> @Model.OrderDescription</p>
        <p><strong>Trạng thái giao dịch:</strong> @(Model.VnPayResponseCode == "00" ? "Thành công" : "Thất bại")</p>

        <a href="/" class="btn btn-primary mt-3">Quay lại trang chủ</a>
    </div>
}
