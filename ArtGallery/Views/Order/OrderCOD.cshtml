@{
    ViewBag.Title = "Xác nhận đơn hàng";
}

<div class="container py-5 text-center">
    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="alert alert-success">@ViewBag.Message</div>
    }
    else if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
    }

    @if (ViewBag.DiaChi != null)
    {
        <p><strong>Địa chỉ giao hàng:</strong> @ViewBag.DiaChi</p>
        <p><strong>Số điện thoại:</strong> @ViewBag.PhoneNumber</p>
    }

    <a href="/" class="btn btn-primary mt-4">
        <i class="fas fa-home me-2"></i>Về trang chủ
    </a>
</div>
