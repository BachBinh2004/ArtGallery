@model ArtGallery.ViewModels.SearchViewModel
@using System.Security.Claims;
@{
    ViewData["Title"] = $"Tìm kiếm: {Model.Query}";
}

<link rel="stylesheet" href="~/css/search-index.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

@await Html.PartialAsync("_NavigationPartial")

<div class="search-main-container">
    <!-- Tab navigation -->
    <div class="container-fluid mt-5">
        <div class="tag-container">
            <div class="tag">
                <a href="@Url.Action("Index", "Search", new { q = Model.Query, category = "Top", sortBy = Model.SortBy })"
                   class="tag-items home @(Model.Category == "Top" ? "active" : "")">Home</a>

                <a href="@Url.Action("Index", "Search", new { q = Model.Query, category = "Illustrations", sortBy = Model.SortBy })"
                   class="tag-items illustration @(Model.Category == "Illustrations" ? "active" : "")">Illustrations</a>

                <a href="@Url.Action("Index", "Search", new { q = Model.Query, category = "Concept", sortBy = Model.SortBy })"
                   class="tag-items concept @(Model.Category == "Concept" ? "active" : "")">Concept</a>

                <a href="@Url.Action("Index", "Search", new { q = Model.Query, category = "Anime/Manga", sortBy = Model.SortBy })"
                   class="tag-items anime @(Model.Category == "Anime/Manga" ? "active" : "")">Anime/Manga</a>

                <a href="@Url.Action("Index", "Search", new { q = Model.Query, category = "Pixel", sortBy = Model.SortBy })"
                   class="tag-items pixel @(Model.Category == "Pixel" ? "active" : "")">Pixel</a>

                <a href="@Url.Action("Index", "Search", new { q = Model.Query, category = "Vector", sortBy = Model.SortBy })"
                   class="tag-items vector @(Model.Category == "Vector" ? "active" : "")">Vector</a>

                <a href="@Url.Action("Index", "Search", new { q = Model.Query, category = "Low-Poly", sortBy = Model.SortBy })"
                   class="tag-items lowpoly @(Model.Category == "Low-Poly" ? "active" : "")">Low-Poly</a>

                <a href="@Url.Action("Index", "Search", new { q = Model.Query, category = "Artists", sortBy = Model.SortBy })"
                   class="tag-items artists @(Model.Category == "Artists" ? "active" : "")">Tác giả</a>
            </div>
        </div>
    </div>

    <!-- Sort options -->
    <div class="sort-options">
        <a href="@Url.Action("Index", "Search", new { q = Model.Query, category = Model.Category, sortBy = "newest" })"
           class="sort-option @(Model.SortBy == "newest" ? "active" : "")">Mới nhất</a>

        <a href="@Url.Action("Index", "Search", new { q = Model.Query, category = Model.Category, sortBy = "oldest" })"
           class="sort-option @(Model.SortBy == "oldest" ? "active" : "")">Cũ nhất</a>

        <div class="ms-auto">
            <button class="search-option-btn">
                <i class="fas fa-sliders-h"></i> Tùy chọn tìm kiếm
            </button>
        </div>
    </div>

    @if (Model.Category == "Artists")
    {
        <div class="results-count">
            <h4>Tác giả <span class="badge bg-secondary">@Model.Artists.Count()</span></h4>
        </div>

        @if (Model.Artists.Any())
        {
            <div class="artists-grid">
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-4">
                    @foreach (var artist in Model.Artists)
                    {
                        <div class="col">
                            <div class="artist-card">
                                <a href="@Url.Action("Profile", "User", new { id = artist.Id })" class="artist-link">
                                    <div class="artist-avatar-large">
                                        <img src="@artist.GetAvatarPath()" alt="@artist.TenNguoiDung">
                                    </div>
                                    <div class="artist-info">
                                        <h5 class="artist-name">@artist.TenNguoiDung</h5>
                                        <div class="artist-stats">
                                            <span><i class="fas fa-image"></i> @artist.Tranhs.Count tác phẩm</span>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
        else
        {
            <div class="no-results">
                <i class="fas fa-user-slash fa-3x mb-3"></i>
                <h4>Không tìm thấy tác giả phù hợp</h4>
                <p>Vui lòng thử tìm kiếm với từ khóa khác</p>
            </div>
        }
    }
    else
    {
        <div class="results-count">
            <h4>@Model.Category <span class="badge bg-secondary">@Model.TotalResults</span></h4>
        </div>

        @if (Model.Artworks.Any())
        {
            <div class="artwork-grid">
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-4">
                    @foreach (var artwork in Model.Artworks)
                    {
                        <div class="col">
                            <div class="pic-item">
                                <div class="image-wrapper">
                                    <a href="@Url.Action("Display", "Home", new { id = artwork.MaTranh })">
                                        <img src="@artwork.DuongDanAnh" alt="@artwork.TieuDe">
                                    </a>
                                    @if (artwork.LuotThiches.Count > 0)
                                    {
                                        <div class="like-count">
                                            @artwork.LuotThiches.Count <i class="fas fa-heart"></i>
                                        </div>
                                    }
                                    <button class="like-button" onclick="toggleLike(this, @artwork.MaTranh)">
                                        <i class="@(artwork.LuotThiches.Any(l => l.MaNguoiDung == Context.User.FindFirstValue(ClaimTypes.NameIdentifier)) ? "fas" : "far") fa-heart"></i>
                                    </button>
                                </div>
                                <div class="img-info mt-2">
                                    <a href="@Url.Action("Display", "Home", new { id = artwork.MaTranh })" class="art-link">
                                        <h6 class="artwork-title">@artwork.TieuDe</h6>
                                    </a>
                                    <div class="artist-info d-flex align-items-center">
                                        <div class="artist-avatar">
                                            <img src="@artwork.MaNguoiDungNavigation.GetAvatarPath()" alt="@artwork.MaNguoiDungNavigation.TenNguoiDung">
                                        </div>
                                        <span class="artist-name">@artwork.MaNguoiDungNavigation.TenNguoiDung</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
        else
        {
            <div class="no-results">
                <i class="fas fa-search fa-3x mb-3"></i>
                <h4>Không tìm thấy kết quả phù hợp</h4>
                <p>Vui lòng thử tìm kiếm với từ khóa khác hoặc thay đổi bộ lọc</p>
            </div>
        }
    }
</div>

@section Scripts {
    <script src="~/js/search-index.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        function toggleLike(button, artworkId) {
            $.ajax({
                url: '/Artwork/ToggleLike',
                type: 'POST',
                data: { artworkId: artworkId },
                headers: {
                    'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                },
                success: function(response) {
                    if (response.success) {
                        const icon = button.querySelector('i');
                        if (response.liked) {
                            icon.classList.remove('far');
                            icon.classList.add('fas');
                            button.classList.add('active');
                        } else {
                            icon.classList.remove('fas');
                            icon.classList.add('far');
                            button.classList.remove('active');
                        }
                    } else {
                        alert(response.message);
                    }
                },
                error: function() {
                    alert('Có lỗi xảy ra khi thực hiện thao tác');
                }
            });
        }
    </script>
}